{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "ConnectionStrings": {
    //"sqlConnection": "Server=DESKTOP-H0J4QM5;Database=ProfilesDB;Trusted_Connection=True;TrustServerCertificate=True;"
    "sqlConnection": "Server=sql_server_profiles;Database=ProfilesDB;User=sa;Password=Your_password123"
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "D:\\Labs\\InnoClinic\\ProfilesManager.API\\Logs\\LoggingWithSerilog\\RestApiLog.log",
          "rollingInterval": "Day"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },

  //"Messaging": {
  //  "Host": "localhost",
  //  "UserName": "guest",
  //  "Password": "guest"
  //},
  "Messaging": {
    "Host": "host.docker.internal",
    "UserName": "guest",
    "Password": "guest",
    "MessageBrockerType": "rabbitmq"
  }
}
